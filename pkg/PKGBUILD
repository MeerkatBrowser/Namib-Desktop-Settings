pkgname=namib-base-skel
pkgdesc='Namib base skeleton files'
pkgver=18.02
pkgrel=1
arch=('any')
url="https://github.com/MeerkatBrowser/namib-desktop-settings"
license=('GPL')
makedepends=('git')
depends=('firefox' 'bash' 'xorg')
source=("git+$url.git")
sha256sums=('SKIP')

package() {
    install -d ${pkgdir}/etc/skel

    cp -r ${srcdir}/namib-desktop-settings/etc/skel/. "${pkgdir}/etc/skel/"
}
