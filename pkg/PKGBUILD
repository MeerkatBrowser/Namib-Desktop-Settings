pkgname=namib-base-skel
pkgdesc='Namib base skeleton files'
pkgver=18.02
pkgrel=1
arch=('any')
url="https://github.com/MeerkatBrowser/namib-desktop-settings"
license=('GPL')
makedepends=('git')
source=("git+$url.git")
sha256sums=('SKIP')
install=$pkgname.install

package() {
    install -d ${pkgdir}/etc/skel_new
    cp -r ${srcdir}/namib-desktop-settings/etc/skel_new/ "${pkgdir}/etc/"
}
