  
post_upgrade() {
    post_install $1
}

pre_upgrade() {
    pre_install $1
}

pre_install() {
    \rm -rf /etc/skel_base
}

post_install() {
    \ln -sf /etc/skel_base/.bash_profile /etc/skel/.bash_profile
	\mkdir -p /root/.config/qt5ct/
	\ln -sf /etc/skel/.config/qt5ct/qt5ct.conf /root/.config/qt5ct/qt5ct.conf
}

